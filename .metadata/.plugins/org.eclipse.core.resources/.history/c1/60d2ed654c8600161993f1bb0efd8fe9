package main;

import java.io.IOException;

import graphic.DrawingUtility;
import graphic.Frame;
import logic.character.Pokemon;
import logic.terrain.FightMap;
import utility.FileUtility;
import utility.Pokedex;

public class Main {
	
	public static void main(String[] args) {
		
		new Frame();
		
		FightMap fightMap = null;
		try {
			fightMap = new FightMap(FileUtility.loadFightMap());
			FileUtility.loadPokedex();
			FileUtility.loadPokemons();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		Pokemon a = Pokedex.getPokemon("Charlizard");
		a.move(5, 3);
		Pokemon b = Pokedex.getPokemon("Ivysaur");
		b.move(5, 4);
		
		DrawingUtility.addObject(fightMap);
		DrawingUtility.addObject(a);
		DrawingUtility.addObject(b);
		Frame.getGraphicComponent().update(Frame.getGraphicComponent().getGraphics());
	}

}
