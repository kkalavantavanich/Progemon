package utility;

public class Clock {
	
	private static double tps = 1000;
	private static long time;
	private static double periodTime = 1000 / tps;
	
	public Clock() {
		// TODO Auto-generated constructor stub
		time = System.nanoTime();
	}
	
	public static void tick(){
		long currentTime = System.nanoTime();
		if(currentTime - time < periodTime){
			int waitingTime = (int) (periodTime * (1000 ^ 2) - currentTime + time);
			try {
				Thread.sleep((long) (Math.floor(waitingTime / (1000 ^ 2))), waitingTime % (1000 ^ 2));
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		time += periodTime;
	}
	
	public static void setTps(double tps) {
		Clock.tps = tps;
	}
	
	public static long getTime() {
		return time;
	}

}
